{
  "name": "ar-io-explorer-sidecar",
  "version": "1.0.0",
  "description": "Harlequin sidecar service for AR.IO gateway webhook processing and parquet data management",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "checkpoint": "tsx src/scripts/checkpoint.ts",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "arweave",
    "ar-io",
    "parquet",
    "webhook",
    "sidecar",
    "harlequin"
  ],
  "author": "The Permaweb Harlequin",
  "license": "MIT",
  "dependencies": {
    "@the-permaweb-harlequin/shared-types": "workspace:*",
    "koa": "^2.15.0",
    "koa-router": "^12.0.1",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-static": "^5.0.0",
    "@koa/multer": "^3.0.2",
    "parquetjs": "^0.11.2",
    "apache-arrow": "^14.0.2",
    "duckdb": "^0.9.2",
    "arweave": "^1.15.1",
    "node-cron": "^3.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "@types/koa": "^2.14.0",
    "@types/koa-router": "^7.4.8",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.5",
    "@types/koa-static": "^4.0.4",
    "@types/node-cron": "^3.0.11",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "prettier": "^3.1.1",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
